{
  "role": {
    "name": "hmpps-nomis-prisoner-api"
  },
  "customDimensions": {
    "service.version": "${BUILD_NUMBER}"
  },
  "instrumentation": {
    "logging": {
      "level": "DEBUG"
    }
  },
  "selfDiagnostics": {
    "destination": "console"
  },
  "sampling": {
    "percentage": 100,
    "overrides": [
      {
        "telemetryType": "dependency",
        "attributes": [
          {
            "key": "db.system",
            "value": "oracle",
            "matchType": "strict"
          }
        ],
        "percentage": 1
      },
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "url.path",
            "value": "/court-cases/[0-9]+",
            "matchType": "regexp"
          }
        ],
        "percentage": 0.1
      },
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "url.path",
            "value": "/health.*",
            "matchType": "regexp"
          }
        ],
        "percentage": 5
      },
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "url.path",
            "value": "/info",
            "matchType": "strict"
          }
        ],
        "percentage": 5
      }
    ]
  },
  "preview": {
    "processors": [
      {
        "type": "metric-filter",
        "exclude": {
          "matchType": "regexp",
          "metricNames": [
            "(cache|executor|disk|http|logback|spring_).*"
          ]
        }
      }
    ]
  }
}
